@using LibraryReporter.Models.Book
@using LibraryReporter.Services
@model List<ReaderViewModel>
@inject AuthService authService
@inject UserService userService


<div class="tableBody">

    <div class="search-section">
        <form method="post" action="/Home/SearchBooks" class="search-form">
            <input type="text" name="name" placeholder="Введите название книги" class="search-input" id="Name" />
            <input type="text" name="author" placeholder="Введите автора книги" class="search-input" id="Author" />
            <input type="text" name="publisher" placeholder="Введите издателя" class="search-input" id="Publisher" />
            <input type="text" name="price" placeholder="Введите цену" class="search-input" id="Price" />
            <input type="number" name="count" placeholder="Введите количество" class="search-input" id="Count" min="0" />
            <button type="submit" class="search-button">Найти</button>
        </form>
    </div>
    <table class="tableBook">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Номер телефона</th>
                <th>Дата рождения</th>
                <th>Дата добавления</th>
                @* @if (authService.IsAuthenticated())
                {
                    <th>Купить</th>
                }
                @if (authService.IsLibraryModerator())
                {
                    <th>Изменить</th>
                    <th>Удалить</th>
                } *@
            </tr>
            @if (authService.IsLibraryModerator())
            {
                <div class="creation-order">
                    <a class="text-neutral-950 hover:text-orange-500 py-2 px-4 rounded-md bg-orange-200" href="/Home/CreateBookOrder">Добавить новую книгу</a>
                </div>
            }
        </thead>
        <tbody>
            @foreach (var reader in Model)
            {
                <tr>
                    <td>@reader.Name</td>
                    <td>@reader.Surname</td>
                    <td>@reader.PhoneNumber</td>
                    <td>@reader.Birtday</td>
                    <td>@reader.AddedDate</td>
                    @* @if (authService.IsAuthenticated())
                    {
                        <td>
                            <a href="/Home/BuyBook?bookId=@book.Id" class="action-icon ">
                                <img src="/images/buy-icon.png" alt="Купить" />
                            </a>
                        </td>
                    }
                    @if (authService.IsLibraryModerator())
                    {
                        <td>
                            <a href="/Home/EditBook?bookId=@book.Id" class="action-icon ">
                                <img src="/images/edit-icon.png" alt="Изменить" />
                            </a>
                        </td>
                        <td>
                            <a href="/Home/DeleteBook?bookId=@book.Id" class="action-icon">
                                <img src="/images/delete-icon.png" alt="Удалить" />
                            </a>
                        </td>
                    } *@
                </tr>
            }
        </tbody>
    </table>
</div>


